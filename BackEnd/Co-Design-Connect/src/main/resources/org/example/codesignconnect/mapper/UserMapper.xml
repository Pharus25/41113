<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.codesignconnect.mapper.UserMapper">
    <select id="findAllUsers" resultType="org.example.codesignconnect.model.User">
        select * from users
    </select>

    <select id="findByUsernameOrEmail" resultType="org.example.codesignconnect.model.User">
        select * from users where username = #{loginInfo} or email = #{loginInfo}
    </select>
</mapper>